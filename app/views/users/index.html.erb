<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
  <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
    <%= profile_img(user) %>
    <%= user.email %>
    <% if current_user != user %>
      <%= render 'follow_form', user: user %>
    <% end %>
    <%= link_to "詳細",user_path(user), class: 'btn btn-default btn-sm btn-success' %>
  </div>
  <% end %>
</div>
